<Window x:Class="BD.AthleteReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="AthleteReportWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                  Text="👤 Результаты спортсменов"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#3498DB"
                  Margin="0,0,0,20"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Первая строка -->
                <TextBlock Text="Страна:" 
                          Grid.Row="0" Grid.Column="0"
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="CountryFilterComboBox" 
                         Grid.Row="0" Grid.Column="1"
                         Height="30"
                         Margin="5"
                         DisplayMemberPath="Name"
                         SelectedValuePath="CountryId"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Вид спорта:" 
                          Grid.Row="0" Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="SportFilterComboBox"
                         Grid.Row="0" Grid.Column="3"
                         Height="30"
                         Margin="5"
                         DisplayMemberPath="Name"
                         SelectedValuePath="SportId"
                         VerticalContentAlignment="Center"/>

                <!-- Вторая строка -->
                <TextBlock Text="Пол:" 
                          Grid.Row="2" Grid.Column="0"
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="GenderFilterComboBox"
                         Grid.Row="2" Grid.Column="1"
                         Height="30"
                         Margin="5"
                         VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Все" Tag="" IsSelected="True"/>
                    <ComboBoxItem Content="Мужской" Tag="M"/>
                    <ComboBoxItem Content="Женский" Tag="F"/>
                </ComboBox>

                <TextBlock Text="Сортировка:" 
                          Grid.Row="2" Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal">
                    <ComboBox x:Name="SortComboBox"
                             Height="30"
                             Width="200"
                             Margin="5"
                             VerticalContentAlignment="Center">
                        <ComboBoxItem Content="По имени" Tag="name" IsSelected="True"/>
                        <ComboBoxItem Content="По стране" Tag="country"/>
                        <ComboBoxItem Content="По месту" Tag="place"/>
                        <ComboBoxItem Content="По результату" Tag="score"/>
                    </ComboBox>

                    <Button Content="📊 Сформировать" 
                            Height="35"
                            MinWidth="150"
                            Margin="10,0,0,0"
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="White"
                            Background="#3498DB"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="GenerateReport_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="12,6">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица отчета -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <DataGrid x:Name="ReportDataGrid"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#EBF5FB"
                     RowBackground="White"
                     BorderThickness="0"
                     ColumnHeaderHeight="40"
                     RowHeight="35">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Страна" Binding="{Binding CountryName}" Width="150"/>
                    <DataGridTextColumn Header="Вид спорта" Binding="{Binding SportName}" Width="150"/>
                    <DataGridTextColumn Header="Пол" Binding="{Binding GenderDisplay}" Width="80"/>
                    <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="80"/>
                    <DataGridTextColumn Header="Место" Binding="{Binding Place}" Width="80"/>
                    <DataGridTextColumn Header="Результат" Binding="{Binding Score}" Width="100"/>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Border>

        <!-- Итоговая статистика -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,15,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Всего спортсменов: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalAthletesText" Text="0" Foreground="#3498DB" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Средний возраст: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="AvgAgeText" Text="0" Foreground="#3498DB" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Лучший результат: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="BestScoreText" Text="0" Foreground="#3498DB" FontWeight="Bold"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="4"
                Content="Закрыть"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                FontSize="14"
                FontWeight="Medium"
                Foreground="White"
                Background="#95A5A6"
                BorderThickness="0"
                Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="12,8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>