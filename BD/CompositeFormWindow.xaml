<Window x:Class="BD.CompositeFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        Title="Добавление участника с результатами"
        Height="650"
        Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                  Text="Добавление участника с результатами"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#3498DB"
                  Margin="0,0,0,20"/>

        <!-- Данные участника (Таблица 1: Participants) -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Данные участника"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="#2C3E50"
                          Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Полное имя -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                        <TextBlock Text="Полное имя *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="FullNameTextBox" Height="35" Padding="8" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Дата рождения -->
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                        <TextBlock Text="Дата рождения (ГГГГ-ММ-ДД) *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="BirthDatePicker" Height="35" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Страна -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                        <TextBlock Text="Страна *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="CountryComboBox" Height="35" 
                                 DisplayMemberPath="Name" 
                                 SelectedValuePath="CountryId"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Основной вид спорта -->
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,10">
                        <TextBlock Text="Основной вид спорта *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="SportComboBox" Height="35" 
                                 DisplayMemberPath="Name" 
                                 SelectedValuePath="SportId"
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Пол -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">
                        <TextBlock Text="Пол *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="GenderComboBox" Height="35" VerticalContentAlignment="Center">
                            <ComboBoxItem Content="Мужской" Tag="M" IsSelected="True"/>
                            <ComboBoxItem Content="Женский" Tag="F"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Результаты участника (Таблица 2: Results) -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Добавить результат"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Foreground="#2C3E50"
                          Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="ResultSportComboBox" 
                             Grid.Column="0"
                             Height="35" 
                             DisplayMemberPath="Name" 
                             SelectedValuePath="SportId"
                             VerticalContentAlignment="Center"/>

                    <TextBox x:Name="PlaceTextBox" 
                            Grid.Column="2"
                            Height="35" 
                            Padding="8"
                            VerticalContentAlignment="Center"
                            ToolTip="Место (1, 2, 3...)"/>

                    <TextBox x:Name="ScoreTextBox" 
                            Grid.Column="4"
                            Height="35" 
                            Padding="8"
                            VerticalContentAlignment="Center"
                            ToolTip="Результат (время, очки и т.д.)"/>

                    <Button Content="➕ Добавить результат"
                           Grid.Column="6"
                           Height="35"
                           MinWidth="150"
                           FontSize="13"
                           FontWeight="Medium"
                           Foreground="White"
                           Background="#27AE60"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="AddResultButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="10,8">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Список результатов -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5,5,5,10">
                    <TextBlock Text="Результаты участника" 
                              FontSize="16"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="ResultsCountText" 
                              Text=" (0)"
                              FontSize="14"
                              Foreground="#7F8C8D"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <DataGrid x:Name="ResultsDataGrid"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="Horizontal"
                         HeadersVisibility="Column"
                         AlternatingRowBackground="#F8F9FA"
                         RowBackground="White"
                         BorderThickness="0"
                         ColumnHeaderHeight="35"
                         RowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Вид спорта" Binding="{Binding SportName}" Width="*"/>
                        <DataGridTextColumn Header="Место" Binding="{Binding Place}" Width="80"/>
                        <DataGridTextColumn Header="Результат" Binding="{Binding Score}" Width="100"/>
                        <DataGridTemplateColumn Header="Действие" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑️" 
                                           Click="RemoveResultButton_Click"
                                           Background="#E74C3C"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Cursor="Hand"
                                           Height="25"
                                           Width="50"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#9B59B6"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="4" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="💾 Сохранить всё"
                   Width="150"
                   Height="45"
                   Margin="5"
                   FontSize="15"
                   FontWeight="Medium"
                   Foreground="White"
                   Background="#27AE60"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="SaveButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="❌ Отмена"
                   Width="120"
                   Height="45"
                   Margin="5"
                   FontSize="15"
                   FontWeight="Medium"
                   Foreground="White"
                   Background="#95A5A6"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="CancelButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
