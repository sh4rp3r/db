<Window x:Class="BD.AgeReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="AgeReportWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                  Text="📊 Средний возраст по видам спорта"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#27AE60"
                  Margin="0,0,0,20"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Первая строка -->
                <TextBlock Text="Тип спорта:" 
                          Grid.Row="0" Grid.Column="0"
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="SportTypeFilterComboBox" 
                         Grid.Row="0" Grid.Column="1"
                         Height="30"
                         Margin="5"
                         VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Все" Tag="" IsSelected="True"/>
                    <ComboBoxItem Content="Командные" Tag="team"/>
                    <ComboBoxItem Content="Индивидуальные" Tag="individual"/>
                </ComboBox>

                <TextBlock Text="Мин. участников:" 
                          Grid.Row="0" Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <TextBox x:Name="MinParticipantsTextBox"
                        Grid.Row="0" Grid.Column="3"
                        Height="30"
                        Padding="5"
                        Text="1"
                        VerticalContentAlignment="Center"
                        Margin="5"/>

                <!-- Вторая строка -->
                <TextBlock Text="Сортировка:" 
                          Grid.Row="2" Grid.Column="0"
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="SortComboBox"
                         Grid.Row="2" Grid.Column="1"
                         Height="30"
                         Margin="5"
                         VerticalContentAlignment="Center">
                    <ComboBoxItem Content="По среднему возрасту ↓" Tag="age_desc" IsSelected="True"/>
                    <ComboBoxItem Content="По среднему возрасту ↑" Tag="age_asc"/>
                    <ComboBoxItem Content="По названию вида спорта" Tag="name"/>
                    <ComboBoxItem Content="По количеству участников ↓" Tag="count_desc"/>
                </ComboBox>

                <Button Content="📊 Сформировать отчет" 
                        Grid.Row="2" Grid.Column="3"
                        Height="35"
                        Margin="10,0,0,0"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="White"
                        Background="#27AE60"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="GenerateReport_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Таблица отчета -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <DataGrid x:Name="ReportDataGrid"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#E8F8F5"
                     RowBackground="White"
                     BorderThickness="0"
                     ColumnHeaderHeight="40"
                     RowHeight="35">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Вид спорта" Binding="{Binding SportName}" Width="*" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding SportTypeDisplay}" Width="120"/>
                    <DataGridTextColumn Header="Участников" Binding="{Binding ParticipantsCount}" Width="120"/>
                    <DataGridTextColumn Header="Средний возраст" Binding="{Binding AverageAge}" Width="150" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Мин. возраст" Binding="{Binding MinAge}" Width="120"/>
                    <DataGridTextColumn Header="Макс. возраст" Binding="{Binding MaxAge}" Width="120"/>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#27AE60"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Border>

        <!-- Итоговая статистика -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,15,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Видов спорта: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="SportsCountText" Text="0" Foreground="#27AE60" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Всего участников: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalParticipantsText" Text="0" Foreground="#27AE60" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Общий средний возраст: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="OverallAvgAgeText" Text="0" Foreground="#27AE60" FontWeight="Bold"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="4"
                Content="Закрыть"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                FontSize="14"
                FontWeight="Medium"
                Foreground="White"
                Background="#95A5A6"
                BorderThickness="0"
                Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="12,8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>