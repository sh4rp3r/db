<Page x:Class="BD.Tables"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BD"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tables">

    <Page.Resources>
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка назад -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="← Назад"
                    Style="{StaticResource ToolbarButtonStyle}"
                    Click="BackButton_Click"/>
            <TextBlock x:Name="TitleText"
                     FontSize="28"
                     FontWeight="Bold"
                     Foreground="#3498DB"
                     VerticalAlignment="Center"
                     Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Панель инструментов -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="10"
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <WrapPanel>
                <Button Content="➕ Добавить" 
                        Style="{StaticResource ToolbarButtonStyle}"
                        Click="AddButton_Click"/>
                <Button Content="✏️ Изменить" 
                        Style="{StaticResource ToolbarButtonStyle}"
                        Click="EditButton_Click"/>
                <Button Content="🗑️ Удалить" 
                        Style="{StaticResource ToolbarButtonStyle}"
                        Background="#E74C3C"
                        Click="DeleteButton_Click"/>
                <Button Content="🔄 Обновить" 
                        Style="{StaticResource ToolbarButtonStyle}"
                        Background="#27AE60"
                        Click="RefreshButton_Click"/>
            </WrapPanel>
        </Border>

        <!-- Панель поиска и фильтрации -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="10"
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Поле:" 
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="SearchFieldComboBox"
                         Grid.Column="1"
                         Height="30"
                         Margin="5"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Оператор:" 
                          Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="FilterOperatorComboBox"
                         Grid.Column="3"
                         Height="30"
                         Margin="5"
                         VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Содержит (LIKE)" IsSelected="True" Tag="LIKE"/>
                    <ComboBoxItem Content="Не содержит (NOT LIKE)" Tag="NOT_LIKE"/>
                    <ComboBoxItem Content="Больше (>)" Tag="GREATER"/>
                    <ComboBoxItem Content="Меньше (&lt;)" Tag="LESS"/>
                    <ComboBoxItem Content="Равно (=)" Tag="EQUALS"/>
                    <ComboBoxItem Content="Не равно (≠)" Tag="NOT_EQUALS"/>
                </ComboBox>

                <TextBlock Text="Значение:" 
                          Grid.Column="4"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <TextBox x:Name="SearchTextBox" 
                        Grid.Column="5"
                        Height="30"
                        Padding="5"
                        VerticalContentAlignment="Center"
                        Margin="5"/>

                <Button Content="🔍 Применить" 
                        Grid.Column="6"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Background="#9B59B6"
                        Click="FilterButton_Click"/>
            </Grid>
        </Border>

        <!-- Панель сортировки -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="8" 
                Padding="10"
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Сортировка:" 
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="SortFieldComboBox"
                         Grid.Column="1"
                         Height="30"
                         Margin="5"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Направление:" 
                          Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>

                <ComboBox x:Name="SortDirectionComboBox"
                         Grid.Column="3"
                         Height="30"
                         Width="150"
                         Margin="5"
                         VerticalContentAlignment="Center">
                    <ComboBoxItem Content="По возрастанию ↑" IsSelected="True" Tag="Ascending"/>
                    <ComboBoxItem Content="По убыванию ↓" Tag="Descending"/>
                </ComboBox>

                <Button Content="⬇️ Применить" 
                        Grid.Column="4"
                        Style="{StaticResource ToolbarButtonStyle}"
                        Background="#E67E22"
                        Click="SortButton_Click"/>
            </Grid>
        </Border>

        <!-- DataGrid для отображения данных -->
        <Border Grid.Row="4" 
                Background="White" 
                CornerRadius="8"
                Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <DataGrid x:Name="DataGridView"
                     AutoGenerateColumns="True"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     SelectionMode="Single"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#F8F9FA"
                     RowBackground="White"
                     BorderThickness="0"
                     ColumnHeaderHeight="40"
                     RowHeight="35">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3498DB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Border>

        <!-- Информационная панель -->
        <Border Grid.Row="5" 
                Background="White" 
                CornerRadius="8" 
                Padding="10"
                Margin="0,10,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Всего записей: " FontWeight="SemiBold"/>
                <TextBlock x:Name="RecordCountText" Text="0"/>
                <TextBlock Text=" | Выбрана: " FontWeight="SemiBold" Margin="20,0,0,0"/>
                <TextBlock x:Name="SelectedRecordText" Text="нет"/>
                <TextBlock x:Name="FilterStatusText" Text="" FontStyle="Italic" Margin="20,0,0,0" Foreground="#9B59B6"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
