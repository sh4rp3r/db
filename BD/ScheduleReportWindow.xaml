<Window x:Class="BD.ScheduleReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="ScheduleReportWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                  Text="📅 Расписание по местам проведения"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#9B59B6"
                  Margin="0,0,0,20"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Первая строка -->
                <TextBlock Text="Место проведения:" 
                          Grid.Row="0" Grid.Column="0"
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="VenueFilterComboBox" 
                         Grid.Row="0" Grid.Column="1"
                         Height="30"
                         Margin="5"
                         DisplayMemberPath="Name"
                         SelectedValuePath="VenueId"
                         VerticalContentAlignment="Center"/>

                <TextBlock Text="Дата с:" 
                          Grid.Row="0" Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <DatePicker x:Name="StartDatePicker"
                           Grid.Row="0" Grid.Column="3"
                           Height="30"
                           Margin="5"
                           VerticalContentAlignment="Center"/>

                <!-- Вторая строка -->
                <TextBlock Text="Дата по:" 
                          Grid.Row="2" Grid.Column="0"
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <DatePicker x:Name="EndDatePicker"
                           Grid.Row="2" Grid.Column="1"
                           Height="30"
                           Margin="5"
                           VerticalContentAlignment="Center"/>

                <TextBlock Text="Сортировка:" 
                          Grid.Row="2" Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal">
                    <ComboBox x:Name="SortComboBox"
                             Height="30"
                             Width="200"
                             Margin="5"
                             VerticalContentAlignment="Center">
                        <ComboBoxItem Content="По дате" Tag="date" IsSelected="True"/>
                        <ComboBoxItem Content="По месту" Tag="venue"/>
                        <ComboBoxItem Content="По виду спорта" Tag="sport"/>
                    </ComboBox>

                    <Button Content="📊 Сформировать" 
                            Height="35"
                            MinWidth="150"
                            Margin="10,0,0,0"
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="White"
                            Background="#9B59B6"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="GenerateReport_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="12,6">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Таблица отчета -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <DataGrid x:Name="ReportDataGrid"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#F4ECF7"
                     RowBackground="White"
                     BorderThickness="0"
                     ColumnHeaderHeight="40"
                     RowHeight="35">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Binding="{Binding StartDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                    <DataGridTextColumn Header="Время" Binding="{Binding StartTime}" Width="100"/>
                    <DataGridTextColumn Header="День недели" Binding="{Binding DayOfWeek}" Width="130"/>
                    <DataGridTextColumn Header="Место проведения" Binding="{Binding VenueName}" Width="*" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Локация" Binding="{Binding Location}" Width="200"/>
                    <DataGridTextColumn Header="Вид спорта" Binding="{Binding SportName}" Width="180"/>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#9B59B6"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Border>

        <!-- Итоговая статистика -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,15,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Всего мероприятий: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalEventsText" Text="0" Foreground="#9B59B6" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Задействовано площадок: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="VenuesUsedText" Text="0" Foreground="#9B59B6" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Видов спорта: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="SportsCountText" Text="0" Foreground="#9B59B6" FontWeight="Bold"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="4"
                Content="Закрыть"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                FontSize="14"
                FontWeight="Medium"
                Foreground="White"
                Background="#95A5A6"
                BorderThickness="0"
                Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="12,8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>