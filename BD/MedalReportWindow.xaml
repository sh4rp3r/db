<Window x:Class="BD.MedalReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD"
        mc:Ignorable="d"
        Title="MedalReportWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                  Text="🏅 Медальный зачет по странам"
                  FontSize="24"
                  FontWeight="Bold"
                  Foreground="#E67E22"
                  Margin="0,0,0,20"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Мин. медалей:" 
                          VerticalAlignment="Center" 
                          Margin="5"
                          FontWeight="SemiBold"/>
                <TextBox x:Name="MinMedalsTextBox" 
                        Grid.Column="1"
                        Height="30"
                        Padding="5"
                        Text="0"
                        VerticalContentAlignment="Center"
                        Margin="5"/>

                <TextBlock Text="Сортировка:" 
                          Grid.Column="2"
                          VerticalAlignment="Center" 
                          Margin="10,5,5,5"
                          FontWeight="SemiBold"/>
                <ComboBox x:Name="SortComboBox"
                         Grid.Column="3"
                         Height="30"
                         Margin="5"
                         VerticalContentAlignment="Center">
                    <ComboBoxItem Content="По странам" Tag="country" IsSelected="True"/>
                    <ComboBoxItem Content="По общему зачету" Tag="total"/>
                    <ComboBoxItem Content="По золоту" Tag="gold"/>
                </ComboBox>

                <Button Content="📊 Сформировать отчет" 
                        Grid.Column="4"
                        Height="35"
                        MinWidth="180"
                        Margin="10,0,0,0"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="White"
                        Background="#E67E22"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="GenerateReport_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="12,6">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Таблица отчета -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <DataGrid x:Name="ReportDataGrid"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#FFF8F0"
                     RowBackground="White"
                     BorderThickness="0"
                     ColumnHeaderHeight="40"
                     RowHeight="35">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Страна" Binding="{Binding CountryName}" Width="*" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="🥇 Золото" Binding="{Binding GoldMedals}" Width="100"/>
                    <DataGridTextColumn Header="🥈 Серебро" Binding="{Binding SilverMedals}" Width="100"/>
                    <DataGridTextColumn Header="🥉 Бронза" Binding="{Binding BronzeMedals}" Width="100"/>
                    <DataGridTextColumn Header="Всего медалей" Binding="{Binding TotalMedals}" Width="120" FontWeight="Bold"/>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#E67E22"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Border>

        <!-- Итоговая статистика -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,15,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <WrapPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Стран в зачете: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="CountriesCountText" Text="0" Foreground="#E67E22" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Всего золотых: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalGoldText" Text="0" Foreground="#E67E22" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                    <TextBlock Text="Всего серебряных: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalSilverText" Text="0" Foreground="#E67E22" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Всего бронзовых: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalBronzeText" Text="0" Foreground="#E67E22" FontWeight="Bold"/>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="4"
                Content="Закрыть"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                FontSize="14"
                FontWeight="Medium"
                Foreground="White"
                Background="#95A5A6"
                BorderThickness="0"
                Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Padding="12,8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>